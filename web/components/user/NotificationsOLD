              v-model="checkWeb"
              name="webNotify"
              type="checkbox"
              true-value="true"
              false-value="false"
              class="focus:ring-pink-500 h-4 w-4 text-pink-600 border-gray-300 rounded"
              @change="notifyChange"
              @click="startListeners"
            >
          </div>
          <div class="ml-3 text-sm">
            <label for="webNotify" class="font-medium text-gray-700">Web</label>
